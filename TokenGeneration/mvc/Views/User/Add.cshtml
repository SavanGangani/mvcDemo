@using Repositories.Models;
@model Customer

<head>
    <!-- SweetAlert CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css">

    <!-- SweetAlert JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>



    @if (TempData["tokenerror"] != null)

    {
        <script>
            Swal.fire({
                title: '@TempData["tokenerror"]',
                icon: 'error',
                confirmButtonText: 'Done'
            });
        </script>
    }
</head>

<form asp-action="Add" asp-controller="User" method="post" class="mt-3">
    <div class="form-group">
        <label for="c_tokentype">Select token type:</label>
        <select class="form-control" id="c_tokentype" name="c_tokentype" asp-for="c_tokentype" required>
            <option value="">Select Token Type</option>
            <option value="New Product">New Product</option>
            <option value="Repair">Repairing</option>
            <option value="Warranty">Warranty</option>
            <option value="General">General</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Add token</button>
</form>
