@using Repositories.Models;
@model List<Trip>



@* <a ></a>  *@
<h3>List Of Trip </h3> 
<a href="/Trip/Mytrip">Your Trip</a>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            @* <th>Trip Id</th> *@
            <th>Trip</th>
            <th>Price</th>
            @* <th>Ticket Stock</th> *@
            <th>Current Stock</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var trip in Model)
        {
            <tr>
                @* <td>@trip.c_tripid</td> *@
                <td>@trip.c_trip</td>
                <td>@trip.c_tripprice</td>
                @* <td>@trip.c_triptotalticket</td> *@
                <td>@trip.c_tripcurrentticket</td>
                <td>
                    <a href="Book?id=@trip.c_tripid">Book Now</a>
                    @* <a href="Trip/Edit?id=@trip.c_tripid">Cancel</a> *@
                    @* <a href="#" onclick="confirmCancel(@trip.c_tripid)">Cancel</a> *@
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
function confirmCancel(tripId) {
    var result = confirm("Are you sure you want to delete this trip?");

    if (result) {
        window.location.href = "Trip/Delete?id=" + tripId;
    }
}
</script>